<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Create Issue
  </button>
  
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Create Issue</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form action="/project/<%=project._id%>" method="POST">
        <div class="modal-body">
          
            <div class="form-group">
              <label for="name">Title</label>
              <input type="text" class="form-control" name="title" id="title" placeholder="Add the title..." required>
            </div>
            <div class="form-group">
              <label for="desc">Description</label>
              <textarea class="form-control" id="desc" name="desc" rows="3" placeholder="Add the description..." required></textarea>
            </div>
            <% if (project.labels.length>0) { %>
                <div class="dropdown">
                  <button
                    class="btn btn-secondary dropdown-toggle"
                    type="button"
                    id="dropdownMenuButton1"
                    data-bs-toggle="dropdown"
                    aria-expanded="false"
                  >
                    Labels
                  </button>
                  <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                    <% for( let label of project.labels) { %>
                    <li><a class="dropdown-item" href="#"><%= label %></a></li>
                    <% } %>
                  </ul>
                </div>
                <% } %>
            <label for="labels" class="col-sm-4 col-form-label">Add Labels</label>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="Bug" id="Bug" name="labels">
                <label class="form-check-label" for="Bug">
                    Bug
                </label>
                </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="UI-Improvment" id="UI-Improvment" name="labels">
                <label class="form-check-label" for="UI-Improvment">
                 UI-Improvment
                </label>
                </div>
                <div class="form-check">
                <input class="form-check-input" type="checkbox" value="Enhancment" id="Enhancment" name="labels">
                <label class="form-check-label" for="Enhancment">
                 Enhancment
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="Documentation" id="Documentation" name="labels">
                <label class="form-check-label" for="Documentation">
                 Documentation
                </label>
            </div>  
                <div class="form-check">
                <input class="form-check-input" type="checkbox" value="Duplicate" id="Duplicate" name="labels">
                <label class="form-check-label" for="Duplicate">
                 Duplicate
                </label>
              </div>
            <div class="form-group">
              <label for="author">Author</label>
              <input type="text" class="form-control" id="author"  name="author" placeholder="Enter the author name..." required>
            </div>
          
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
      </div>
    </div>
  </div>